{
    "name": "pnpm-monorepo",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "scoped-observer/*",
        "behavior/*"
    ],
    "devDependencies": {
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.0.11",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "react": "^18.3.1"
    },
    "scripts": {
        "build:core": "pnpm --filter @scoped-observer/core run build",
        "publish:core": "pnpm publish --filter @scoped-observer/core --access public",
        "build:react": "pnpm --filter @scoped-observer/react run build",
        "publish:react": "pnpm publish --filter @scoped-observer/react --access public",
        "build:react-store": "pnpm --filter @scoped-observer/react-store run build",
        "publish:react-store": "pnpm publish --filter @scoped-observer/react-store --access public",
        "build:react-state-machine": "pnpm --filter @scoped-observer/react-state-machine run build",
        "publish:react-state-machine": "pnpm publish --filter @scoped-observer/react-state-machine --access public",
        "build:react-visibility-state": "pnpm --filter react-visibility-state run build",
        "publish:react-visibility-state": "pnpm publish --filter react-visibility-state --access public",
        "build:react-wizzard": "pnpm --filter react-wizzard run build",
        "publish:react-wizzard": "pnpm publish --filter react-wizzard --access public",
        "build:react-scrollium": "pnpm --filter react-scrollium run build",
        "publish:react-scrollium": "pnpm publish --filter react-scrollium --access public"
    }
}