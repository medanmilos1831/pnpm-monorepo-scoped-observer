{
    "name": "pnpm-monorepo-scoped-observer",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.0.11",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "react": "^18.3.1"
    },
    "scripts": {
        "version:core:patch": "pnpm version patch --filter @scoped-observer/core",
        "version:core:minor": "pnpm version minor --filter @scoped-observer/core",
        "version:core:major": "pnpm version major --filter @scoped-observer/core",
        "build:core": "pnpm run build --filter @scoped-observer/core",
        "publish:core": "pnpm publish --filter @scoped-observer/core --access public",
        "build:react": "pnpm run build --filter @scoped-observer/react",
        "publish:react": "pnpm publish --filter @scoped-observer/react --access public"
    }
}