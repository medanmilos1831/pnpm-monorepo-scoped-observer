{
  "compilerOptions": {
    "target": "es6",                
    "module": "commonjs",           
    "strict": true,                 
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",             
    "rootDir": "./src",             
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist"  
  },
  "include": ["src/**/*.ts"],       
  "exclude": ["node_modules"]       
}
